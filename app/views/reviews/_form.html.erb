
<div class="row">
  <%= form_for [@movie, @review], html: {id: "review-form"} do |f| %>
  
  

    <div class="input-field col s12 m6">
      <i class="material-icons prefix">chat_bubble</i>
      <%= label_tag(:body, "Review:") %>
      <textarea id="body" name="review[body]" class="materialize-textarea"></textarea>
    </div>

    <div id="review-form-rating" class="input-field col s12 m3">
      <i class="material-icons prefix">thumbs_up_down</i>
      <%= label_tag(:rating, "Rate: 1 to 5") %>
      <%= f.text_field :rating, class: "validate", pattern: "1|2|3|4|5" %>
    </div>

    <div id="review-form-button" class="input-field col s12 m3">
      <%= f.submit "Submit", class: "btn waves-effect waves-light right " %>
    </div>
  
<% end %>

</div>