<div class="row">
  <div class="col s6">
    <div class="row">
			<%= form_tag(movies_path, :method => "get") do %>
				<div class="input-field col s12">
		      <i class="material-icons prefix">search</i>
				  <%= text_field_tag :movie_title, params[:movie_title], placeholder: "Search Movies" %>
				  <%= submit_tag "Search", :name => nil, type: "hidden", :utf8 => nil %>
				</div>   
			<% end %>
		</div>
  </div>

  <div class="col s6">
    <div class="row">
			<%= form_tag(movies_path, :method => "get") do %>
				<div class="input-field col s12">
		      <i class="material-icons prefix">view_list</i>
				  <%= text_field_tag :category, params[:category], placeholder: "Search Category" %>
				  <%= submit_tag "Search", :name => nil, type: "hidden", :utf8 => nil %>
				</div>   
			<% end %>
		</div>
  </div>
</div>
