

<% @movie.reviews.each do |review| %>
	<h5><%= review.user.username %></h5>
	<p><%= review.body %></p>
	<% review.rating.times do %>
  	<img height="30" src=/images/popcorn.png>
  <% end %>
  
	<% review.comments.each do |comment| %>
		<p style="color: red;">THIS IS THE COMMENT FOR THE REVIEW <%= comment.body %></p>
	<% end %>
<% end %>