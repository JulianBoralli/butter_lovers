<div class="row">
	<div class="col s12 m12">
		<h2 class="header">Welcome, <%= @user.username.capitalize %>!</h2>
		<div id="edit-button" class="btn waves-effect waves-light z-depth-5"> <%= link_to 'Edit account info', edit_user_path(@user), {class:"white-text"} %> </div>	
	</div>
</div>

<h5>Your favorite movies</h5>

<% favorite_movies(@user).each do |movie| %>

<a href="/movies/<%= movie.id %>">
	<img class="z-depth-3" height="200" src=<%= movie.poster %>>
</a>
<% end %>

<h5>Your recent reviews</h5>

<% @user.reviews.last(5).each do |review| %>
<div class="row">
	<div class="col s6 m12">
		<div id="review-card" class="card-panel z-depth-5 waves-effect waves-light">
			<span class="black-text">"<%= review.body %>"
			</span><br>
			<%= link_to review.movie.title, movie_path(review.movie) %>
			<span class="black-text">Rating: <%= review.rating %></span>
		</div>
	</div>
</div>
<% end %>

<h5>Your recent comments</h5>

<% @user.comments.last(5).each do |comment| %>
<div class="row">
	<div class="col s6 m12">
		<div id="review-card" class="card-panel z-depth-5 waves-effect waves-light">
			<span class="black-text">"<%= comment.body %>"
			</span>
		</div>
	</div>
</div>
<% end %>
